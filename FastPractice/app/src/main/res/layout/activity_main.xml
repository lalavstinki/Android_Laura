<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:text="Introduir nou registre"
        android:textSize="70px"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="Nom"
        android:padding="30px"
        android:textColorHint="#000000"
        android:id="@+id/Name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="Cognoms"
        android:padding="30px"
        android:textColorHint="#000000"
        android:id="@+id/Surname"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radioDona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dona"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radioHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <CheckBox
            android:id="@+id/chkTreballa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treballa"
            />
        <CheckBox
            android:id="@+id/chkEstudia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudia"
            />
    </LinearLayout>
    <Switch
        android:text="Estudis Unviersitaris"
        android:id="@+id/switchEstudis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dip"
        android:layout_gravity="center"/>
    <SeekBar
        android:id="@+id/seekBar1"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider"
        android:layout_alignParentLeft="true"
        android:text="Pes"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Data de naixament"
        android:padding="30px"
        android:textColorHint="#000000"
        android:layout_gravity="center"
        android:id="@+id/Birthdate"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Registrar"
        android:layout_marginLeft="20px"
        android:id="@+id/Boton"
        android:background="#d3d3d3"
        android:padding="30px"
        android:onClick="Llamar_funcion"
        android:layout_gravity="center"
        android:layout_marginTop="25px"
        />
</LinearLayout>